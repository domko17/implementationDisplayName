<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.evolveum.polygon.scimrest</groupId>
        <artifactId>connector-scimrest-connectors</artifactId>
        <version>0.1-SNAPSHOT</version>
    </parent>

    <artifactId>connector-sample-scimdev-noclass</artifactId>
    <version>0.1-SNAPSHOT</version>
    <packaging>jar</packaging>
    <name>Polygon Sample Scim.Dev Connector</name>

    <properties>
        <connectorPackage>com.evolveum.polygon.sample.scimdev</connectorPackage>
        <connectorClass>ScimDevConnector</connectorClass>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <archive>
                        <index>true</index>
                        <manifestEntries>
                            <ConnectorBundle-ConnectorClass>com.evolveum.polygon.scimrest.groovy.impl.ReadOnlyConnector</ConnectorBundle-ConnectorClass>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>